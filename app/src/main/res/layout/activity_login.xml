<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/first_activitys">
<RelativeLayout
    android:id="@+id/login_scree"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >



    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_centerHorizontal="true"
        android:transitionName="logoo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"

        android:src="@drawable/logo" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="156dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/login"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:layout_alignStart="@id/rectangle"
        android:layout_marginStart="38dp"
        android:textColorHint="@color/WHITE"
        android:layout_alignParentTop="true"
        android:textColor="@color/WHITE"
        android:layout_marginTop="401dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="@string/nazwa"
        android:textAppearance="@style/nazwa"
        android:alpha="0.8" />

    <View
        android:id="@+id/profile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="418dp"
        android:background="@drawable/profile"
        android:alpha="0.8" />

    <View
        android:id="@+id/rectangle2"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/password"
        android:textColor="@color/WHITE"
        android:layout_width="189dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="454dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/WHITE"
        android:hint="@string/password"
        android:alpha="0.8" />

    <View
        android:id="@+id/password_lo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/password_lock2"
        android:alpha="0.8" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnLogin"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:textSize="16sp"
        app:spinning_bar_color="#688096"
        android:textColor="@color/WHITE"
        android:text="Zaloguj siÄ™"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/zapomniaem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnLogin"
        android:text="@string/zapomniaem"
        android:textAppearance="@style/zapomniaem"
        android:gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/link_to_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/zapomniaem"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|bottom"

        android:text="@string/utwrzkont"
        android:textAppearance="@style/utwrzkont" />

</RelativeLayout>

</ScrollView>
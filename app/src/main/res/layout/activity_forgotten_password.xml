<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_scree"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <View
        android:id="@+id/action"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/first_activitys" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_centerHorizontal="true"
        android:transitionName="logoo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"

        android:src="@drawable/logo" />


    <View
        android:id="@+id/rectangle2"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="209dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/user"
        android:textColor="@color/WHITE"
        android:layout_width="189dp"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:background="@android:color/transparent"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="454dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/WHITE"
        android:hint="@string/nazwa"
        android:alpha="0.8" />

    <View
        android:id="@+id/password_lo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="18dp"
        android:layout_marginTop="470dp"
        android:alpha="0.8"
        android:background="@drawable/profile" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnSend"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_below="@id/rectangle2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:textSize="16sp"
        app:spinning_bar_color="#688096"
        android:textColor="@color/WHITE"
        android:text="Wyślij email"
        android:textAppearance="@style/TextAppearance.AppCompat" />


    <TextView
        android:id="@+id/link_to_lg"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:text="Powrót do logowania"
        android:textAppearance="@style/utwrzkont"
        android:gravity="center_horizontal|bottom" />
</RelativeLayout>

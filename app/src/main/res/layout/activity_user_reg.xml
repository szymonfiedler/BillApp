<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_sc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">

    <View
        android:id="@+id/action"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/first_activitys" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:transitionName="logoo"
        android:layout_marginTop="18dp"
        android:src="@drawable/logo" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/profile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="207dp"
        android:background="@drawable/profile"
        android:alpha="0.8" />

    <EditText
        android:id="@+id/username"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:inputType="text"

        android:textColorHint="@color/WHITE"
        android:layout_alignStart="@id/rectangle"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/WHITE"
        android:layout_marginTop="189dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="@string/nazwa"
        android:textAppearance="@style/nazwa"
        android:alpha="0.8" />

    <View
        android:id="@+id/rectangle2"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/rectangle"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/profile2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:background="@drawable/profile"
        android:alpha="0.8" />

    <EditText
        android:id="@+id/name"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:textColorHint="@color/WHITE"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/WHITE"
        android:layout_marginTop="242dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="@string/imie"
        android:textAppearance="@style/imie"
        android:alpha="0.8" />

    <View
        android:id="@+id/rectangle3"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rectangle2"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/profile3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle3"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="312dp"
        android:background="@drawable/profile"
        android:alpha="0.8" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:textColorHint="@color/WHITE"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/WHITE"
        android:layout_marginTop="295dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="@string/nazwisko"
        android:textAppearance="@style/nazwisko"
        android:alpha="0.8" />

    <View
        android:id="@+id/rectangle4"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rectangle3"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/emailic"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:layout_alignStart="@id/rectangle4"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="367dp"
        android:background="@drawable/email"
        android:alpha="0.8" />


    <EditText
        android:id="@+id/email"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/WHITE"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/WHITE"
        android:layout_marginTop="348dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="@string/email"
        android:textAppearance="@style/email"
        android:alpha="0.8" />


    <View
        android:id="@+id/rectangle5"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rectangle4"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle" />

    <View
        android:id="@+id/password2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle5"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="418dp"
        android:background="@drawable/password_lock2"
        android:alpha="0.8" />

    <EditText
        android:id="@+id/password"
        android:textColor="@color/WHITE"
        android:layout_width="189dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="402dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/WHITE"
        android:hint="@string/password"
        android:alpha="0.8" />


    <View
        android:id="@+id/password3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@id/rectangle5"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/password_lock3"
        android:alpha="0.8" />

    <EditText
        android:id="@+id/password4"
        android:textColor="@color/WHITE"
        android:layout_width="189dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:layout_alignStart="@id/rectangle2"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="454dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/WHITE"
        android:hint="@string/password_confirm"
        android:alpha="0.8" />

    <View
        android:id="@+id/rectangle6"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_alignTop="@+id/password4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnRegister"
        android:layout_width="256dp"
        android:layout_height="45dp"
        android:layout_below="@id/rectangle6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        app:spinning_bar_color="#688096"
        android:text="Zarejestruj siÄ™"
        android:textColor="@color/WHITE"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/link_to_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:text="@string/zaloguj_sie"
        android:textAppearance="@style/zaloguj_sie"
        android:gravity="center_horizontal|bottom" />
</RelativeLayout>